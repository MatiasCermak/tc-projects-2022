{
    "java.configuration.updateBuildConfiguration": "automatic",
    // Generacion archivos ANTLR en el paquete Java
    "antlr4.generation": {
        "mode": "external",
        "language": "Java",
        //"language": "Python3",
        "listeners": true,
        "visitors": true
    },
    "antlr4.debug": {
        "visualParseTreeHorizontal": false,
        "visualParseTreeClustered": true
    },
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx4G -Xms100m"
}